<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Isis.ResetCommand"
	x:Name="UserControl"
	d:DesignWidth="180" d:DesignHeight="180"
	DataContext="{Binding DriveView,Source={StaticResource Locator}}">

    <Grid x:Name="LayoutRoot">
        <Button Content="RESET" Margin="10,10,0,0" VerticalAlignment="Top" Height="160" HorizontalAlignment="Left" Width="160" Background="#FFF31111" Foreground="#FF0080FF" FontSize="36" FontWeight="Bold" FontFamily="Arial" />
    </Grid>
</UserControl>