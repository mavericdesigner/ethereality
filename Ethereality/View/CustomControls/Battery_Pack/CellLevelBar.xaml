<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Isis.CellLevelBar"
	x:Name="UserControl" d:DesignHeight="20" Width="135">

    <Grid x:Name="LayoutRoot">
        <Grid>
            <ProgressBar x:Name="CellBar"
				Width="70"
				Height="20"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Foreground="Red"
                         Value="34"/>
            <TextBlock x:Name="CellVolt"
				Margin="0,0,20,4"
				TextAlignment="Center"
				TextWrapping="Wrap" HorizontalAlignment="Right" Text="0000" Width="40" />
            <Label Content="mV" VerticalAlignment="Top" Margin="0,0,1,0" HorizontalAlignment="Right" Width="19" FontSize="11" />
        </Grid>
    </Grid>
</UserControl>