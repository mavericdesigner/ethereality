<UserControl x:Class="Isis.CustomControls.Battery_Pack.PreChargeStatus.PreChargeState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Isis="clr-namespace:Isis"
             mc:Ignorable="d" Height="40" Width="225"
             DataContext="{Binding BatterView,Source={StaticResource Locator}}">
    <Grid>
        <UniformGrid Columns="2" Rows="1">
            <TextBlock
                FontSize="10"
                FontWeight="Bold"
                Text="PreChargeState"
                TextWrapping="Wrap"
                TextAlignment="Center"></TextBlock>
            <Isis:StatusLampControl Height="Auto" Width="Auto" ErrorMessage="12V" />
        </UniformGrid>
    </Grid>
</UserControl>