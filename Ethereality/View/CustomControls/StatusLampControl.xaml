<UserControl x:Class="Isis.StatusLampControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 Width="160"
			 Height="40"
			 mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <Rectangle x:Name="ErrorBlock"
			Fill="Lime"
			Stroke="Black" RadiusY="19.5" RadiusX="19.5" />
        <TextBlock Margin="5,12.625,5,12.375" x:Name="ErrorMessageBox" FontFamily="Calibri" TextWrapping="Wrap" TextAlignment="Center" Text="Status Message">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>